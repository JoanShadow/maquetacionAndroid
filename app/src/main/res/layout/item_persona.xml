<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space_8dp">

    <ImageView
        android:id="@+id/imgPersona"
        android:layout_width="@dimen/space_40dp"
        android:layout_height="@dimen/space_40dp"
        android:src="@drawable/rajoy"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/nombrePersona"
        style="@style/myTxVwStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_8dp"
        android:layout_toRightOf="@id/imgPersona"
        android:text="@string/rajoy"
        android:textColor="#000"/>

</RelativeLayout>